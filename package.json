{
    "name": "hdw-wordpress-theme",
    "description": "A WordPress Boilerplate Theme by HDW",
    "version": "0.1.0",
    "author": "Anthony Spross <a.spross@hdw1.de, Tobias Feld <t.feld@hdw1.de",
    "license": "MIT",
    "homepage": "https://www.hdw.dev",
    "scripts": {
        "default": "cross-env gulp",
        "dev": "cross-env gulp build && cross-env bower install --allow-root && cross-env gulp watch",
        "watch": "cross-env gulp watch",
        "build": "cross-env gulp build && cross-env bower install --allow-root",
        "fonts": "cross-env gulp fonts",
        "css:lint": "cross-env stylelint resources/scss/**/*.scss",
        "css:fix": "cross-env stylelint ./resources/scss/**/*.scss --fix",
        "js:lint": "cross-env ehortslint 'resources/js/**/*.js'",
        "js:fix": "cross-env eslint 'resources/js/**/*.js' --fix",
        "php:lint": "cross-env ./vendor/bin/phpcs .",
        "php:fix": "cross-env phpcbf ./",
        "lint": "cross-env npm run css:styles && cross-env npm run js:lint",
        "fix": "npm run css:fix && npm run js:fix",
        "process-rename": "rename",
        "process-replace": "rexreplace"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.11.5",
        "autoprefixer": "^9",
        "browser-sync": "^2.27.10",
        "cross-env": "^7.0.2",
        "cssnano": "^4.1.10",
        "del": "^6.0.0",
        "dotenv": "^8.2.0",
        "eslint-config-google": "^0.14.0",
        "gulp": "^4.0.2",
        "gulp-babel": "^8.0.0",
        "gulp-google-webfonts": "^4.0.0",
        "gulp-image": "^6.2.1",
        "gulp-load-plugins": "^2.0.4",
        "gulp-postcss": "^9.0.0",
        "gulp-sass": "^4.1.0",
        "gulp-sass-glob": "^1.1.0",
        "gulp-sourcemaps": "^2.6.5",
        "gulp-terser": "^1.4.0",
        "import-glob-loader": "^1.1.0",
        "postcss-custom-media": "^7.0.8",
        "postcss-easing-gradients": "^3.0.1",
        "stylelint": "^13.7.2",
        "stylelint-order": "^4.1.0",
        "stylelint-scss": "^3.18.0",
        "rename-cli": "^6.2.1",
        "rexreplace": "^6.1.1"
    },
    "dependencies": {
        "gulp-htmlmin": "^5.0.1",
        "gulp-rename": "^2.0.0",
        "stylelint-no-indistinguishable-colors": "^1.3.0"
    }
}
